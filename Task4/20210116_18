#include <stdio.h>

int main()
{
    int numCaravans = 3;
    int numCampers = 3;
    double priceCaravan = 90;
    double priceCamper = 100;

    printf("Welcome to Caravan Campers for Rent\n");
    printf("To rent a caravan, press 1\n");
    printf("To rent a camper, press 2\n");

    char result;
    scanf("%c", &result);

    double totalAmount;
    if (result == '1'){
        totalAmount += 90;
    } else {
        totalAmount += 100;
    }
    printf("Your total amount is %.2lf leva.\n", totalAmount);
    printf("Would you like anything else?");
    return 0;
}
